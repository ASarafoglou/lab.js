{
  "name": "lab.js.builder",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "react-scripts": "0.9.2"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "classnames": "^2.2.5",
    "file-saver": "^1.3.3",
    "font-awesome": "^4.7.0",
    "localforage": "^1.5.0",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "raven-js": "^3.12.0",
    "react": "^15.4.1",
    "react-addons-css-transition-group": "^15.4.1",
    "react-addons-transition-group": "^15.4.1",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.4.1",
    "react-modal": "^1.6.5",
    "react-monaco-editor": "^0.7.1",
    "react-redux": "^5.0.3",
    "react-redux-form": "^1.7.0",
    "reactstrap": "^4.1.1",
    "redux": "^3.6.0",
    "requirejs": "^2.3.2",
    "serialize-javascript": "^1.3.0",
    "sw-toolbox": "^3.4.0",
    "webfont-dl": "^0.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "postinstall": "npm run static:fa && npm run static:fira && npm run static:localforage && npm run static:lodash && npm run static:monaco && npm run static:requirejs && npm run static:serialize-javascript && npm run static:sw-toolbox",
    "static:fa": "mkdir -p public/vendor/font-awesome && cp -r node_modules/font-awesome/css node_modules/font-awesome/fonts public/vendor/font-awesome/",
    "static:localforage": "cp node_modules/localforage/dist/localforage.min.js public/vendor",
    "static:lodash": "cp node_modules/lodash/lodash.min.js public/vendor",
    "static:fira": "webfont-dl 'https://fonts.googleapis.com/css?family=Fira+Mono|Fira+Sans' --woff2=link --woff1=omit --svg=omit --ttf=omit --eot=omit --out=public/vendor/fira/fira.css",
    "static:monaco": "cp -R node_modules/monaco-editor/min/vs/ public/vs",
    "static:requirejs": "cp node_modules/requirejs/require.js public/vendor",
    "static:serialize-javascript": "patch node_modules/serialize-javascript/index.js -i src/vendor/serialize-javascript.patch -o public/vendor/serialize-javascript.js",
    "static:sw-toolbox": "cp -R node_modules/sw-toolbox/sw-toolbox.js public/vendor"
  }
}
