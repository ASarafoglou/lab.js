{
  "name": "lab.js.builder",
  "version": "2018.1.2",
  "private": true,
  "devDependencies": {
    "glob": "^7.1.2",
    "redux-devtools-extension": "^2.13.7",
    "shx": "^0.3.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.2.0",
    "attr-accept": "^1.1.3",
    "bootstrap": "^4.2.1",
    "classnames": "^2.2.6",
    "common-tags": "^1.8.0",
    "fabric": "^2.3.3",
    "file-saver": "^1.3.8",
    "fira": "github:mozilla/Fira",
    "hash.js": "^1.1.5",
    "htmlhint": "^0.9.13",
    "jszip": "^3.1.3",
    "lab.js": "file:../library",
    "localforage": "^1.7.2",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "papaparse": "^4.5.0",
    "parse-author": "^2.0.0",
    "prop-types": "^15.6.2",
    "raven-js": "^3.26.4",
    "react": "^16.4.1",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^5.0.1",
    "react-dom": "^16.4.1",
    "react-modal": "^3.5.1",
    "react-monaco-editor": "^0.14.0",
    "react-redux": "^5.0.7",
    "react-redux-form": "^1.16.9",
    "react-scripts": "2.1.1",
    "react-transition-group": "^2.4.0",
    "reactstrap": "^7.1.0",
    "redux": "^4.0.0",
    "requirejs": "^2.3.2",
    "serialize-javascript": "^1.5.0",
    "slugify": "^1.3.0",
    "source-map-explorer": "^1.5.0",
    "uuid4": "^1.0.0"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm-run-all build-css build-js",
    "start-js": "npm run static:library && react-scripts start",
    "build-js": "npm run static:library && react-scripts build && node scripts/postprocess_build.js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "analyze": "source-map-explorer build/static/js/main.*",
    "build-css": "node-sass-chokidar src/ -o src/",
    "deploy": "node scripts/deploy.js",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "postinstall": "npm run static:monaco && npm run static:requirejs",
    "static:library": "shx mkdir -p public/api/_defaultStatic/lib/ && shx cp -R ../library/dist/labjs-starterkit/lib/* public/api/_defaultStatic/lib/",
    "static:monaco": "shx cp -R node_modules/monaco-editor/min/vs/ public/vs",
    "static:requirejs": "shx mkdir -p public/vendor && shx cp node_modules/requirejs/require.js public/vendor/"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
