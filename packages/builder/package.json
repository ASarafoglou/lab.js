{
  "name": "lab.js.builder",
  "version": "2017.2.0",
  "private": true,
  "devDependencies": {
    "glob": "^7.1.2",
    "react-scripts": "1.0.14"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free-webfonts": "^1.0.3",
    "bootstrap": "4.0.0",
    "classnames": "^2.2.5",
    "color": "^2.0.0",
    "common-tags": "^1.5.1",
    "fabric": "2.0.0-beta.4",
    "file-saver": "^1.3.3",
    "fira": "github:mozilla/Fira",
    "htmlhint": "^0.9.13",
    "jszip": "^3.1.3",
    "lab.js": "^2017.2.0",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "papaparse": "^4.3.3",
    "parse-author": "^2.0.0",
    "prop-types": "^15.5.10",
    "raven-js": "^3.12.0",
    "react": "^16.0.0",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^16.0.0",
    "react-modal": "^3.1.0",
    "react-monaco-editor": "^0.12.0",
    "react-redux": "^5.0.6",
    "react-redux-form": "^1.14.1",
    "react-transition-group": "^2.2.1",
    "reactstrap": "^5.0.0-beta",
    "redux": "^3.6.0",
    "requirejs": "^2.3.2",
    "serialize-javascript": "^1.3.0",
    "slugify": "^1.2.6"
  },
  "optionalDependencies": {
    "@fortawesome/fontawesome-pro-webfonts": "^1.0.3"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm-run-all build-css build-js",
    "start-js": "npm run static:library && react-scripts start",
    "build-js": "npm run static:library && react-scripts build && node scripts/postprocess_build.js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "postinstall": "npm run static:monaco && npm run static:requirejs && bash scripts/fabric_patch.sh",
    "static:library": "mkdir -p public/api/_defaultStatic/lib/ && cp -R node_modules/lab.js/dist/labjs-starterkit/lib/* public/api/_defaultStatic/lib/",
    "static:monaco": "cp -R node_modules/monaco-editor/min/vs/ public/vs",
    "static:requirejs": "cp node_modules/requirejs/require.js public/vendor"
  }
}
